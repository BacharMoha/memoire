		document.getElementById('searchPharmacie').addEventListener('keyup', function () {
let filter = this.value.toLowerCase();
let items = document.querySelectorAll('#pharamacieList ul');
let noResults = document.getElementById('pharamacieLi');

let anyMatch = false;

items.forEach(item => {
let text = item.textContent.toLowerCase();
if (text.includes(filter)) {
item.style.display = '';
anyMatch = true;
} else {
item.style.display = 'none';
}
});

// Afficher ou masquer le message "Aucun résultat trouvé"
if (anyMatch) {
noResults.style.display = 'none';
} else {
noResults.style.display = 'block';
}
});
