	<div class="container">
		<h1 class="mb-4">Gestion des Notifications</h1>

		<div class="search-bar">
			<input type="text" class="form-control" id="searchNotifications" placeholder="Rechercher une notification">
			<span class="search-icon">
				<i class="fas fa-search"></i>
			</span>
		</div>

		<a href="{{ path('app_notifications') }}" class="btn btn-add mb-3" style="border-radius: 10px; float: right;">Ajouter</a>

		<table class="table table-striped">
			<thead>
				<tr>
					<th>#</th>
					<th>Titre</th>
					<th>Message</th>
					<th>Date</th>
