{% extends 'base.html.twig' %}

{% block title %}Profil de l'utilisateur - LocaPharma{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/styles.css') }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="profile-container">
        <div class="profile-header">
            <div class="profile-image-container">
                <img src="{{ asset('images/pharmacy-icon.jpg') }}" alt="Photo de profil" class="profile-image">
                <label for="profile-image-upload" class="profile-image-edit-icon">
                    <i class="fas fa-edit"></i> <!-- Icône de modification -->
                </label>
                <input type="file" id="profile-image-upload" style="display:none;">
            </div>
            <h2>Bachar</h2>
        </div>

        <div class="profile-info">
            <form>
                <div class="input-container mb-3">
                    <span class="input-icon">
                        <i class="fas fa-user"></i>
                    </span>
                    <input type="text" id="username" name="username" value="Nom d'utilisateur" class="form-control" readonly>
                </div>
                <div class="input-container mb-3">
                    <span class="input-icon">
                        <i class="fas fa-envelope"></i>
                    </span>
                    <input type="email" id="email" name="email" value="exemple@domaine.com" class="form-control" readonly>
                </div>
             <div class="input-container">
						<span class="input-icon">
							<i class="fas fa-lock"></i>
						</span>
						<input type="password" name="password" placeholder="Nouveau mot de passe" required>
					</div>
					<div class="input-container">
						<span class="input-icon">
							<i class="fas fa-lock"></i>
						</span>
						<input type="password" name="confirm_password" placeholder="Confirmer le mot de passe" required>
					</div>
						<button type="submit" class="btn">Mettre à jour</button>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .profile-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .profile-header {
        text-align: center;
        margin-bottom: 20px;
    }

    .profile-image-container {
        position: relative;
        display: inline-block;
    }

    .profile-image {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        border: 3px solid #ddd;
        object-fit: cover;
    }

    .profile-image-edit-icon {
        position: absolute;
        top: 10px;
        right: 10px;
        background-color: #fff;
        border-radius: 50%;
        padding: 5px;
        cursor: pointer;
        font-size: 18px;
        color: #555;
    }

    .profile-image-edit-icon:hover {
        background-color: #f0f0f0;
    }

    .input-container {
        position: relative;
        margin-bottom: 20px;
    }

    .input-container input {
        width: 100%;
        padding: 15px 15px 15px 45px;
        border: 2px solid #0839CF;
        border-radius: 30px;
        font-size: 16px;
        background-color: #f9f9f9;
    }

    .input-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        font-size: 17px;
        color: #0839CF;
    }

    .form-control[readonly] {
        background-color: #f9f9f9;
        color: #555;
    }
		.btn {
					width: 100%;
					padding: 15px;
					background-color: #0839CF;
					color: #ffffff;
					border: none;
					border-radius: 30px;
					font-size: 16px;
					cursor: pointer;
					margin-top: 10px;
				}

				.btn:hover {
					background-color: #0056b3;
				}
	h2 {
					color: #0839CF;
					font-size: 24px;
					margin-bottom: 10px;
					font-family: "Great Vibes", cursive;
					margin-top: 5%;
				}
</style>

<script>
    document.getElementById('profile-image-upload').onchange = function(event) {
        const [file] = event.target.files;
        if (file) {
            document.querySelector('.profile-image').src = URL.createObjectURL(file);
        }
    };
</script>
{% endblock %}
