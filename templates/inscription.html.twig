{% extends 'base.html.twig' %}

{% block title %}Recherche Médicament - LocaPharma
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('assets/css/styles.css') }}">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
	<meta name="viewport" content="width=device-width, initial-scale=1">
{% endblock %}

{% block body %}
	<div class="container">
		<header>
			<style>
				body {
					font-family: Arial, sans-serif;
					margin: 0;
					padding: 0;
					background-color: #ffffff;
					display: flex;
					justify-content: center;
					align-items: center;
					height: 100vh;
				}

				.container {
					text-align: center;
					width: 90%;
					max-width: 400px;
					padding: 20px;
					border-radius: 10px;
					box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
				}

				.logo {
					width: 100px;
					margin-bottom: 20px;
				}

				h2 {
					color: #0839CF;
					font-size: 24px;
					margin-bottom: 10px;
					font-family: "Great Vibes", cursive;
				}

				.subtitle {
					color: #999999;
					font-size: 16px;
					margin-bottom: 20px;
					font-family: "Blippo", fantasy;
				}

				.input-container {
					position: relative;
					margin-bottom: 20px;
				}

				.input-container input {
					width: 100%;
					padding: 15px 15px 15px 45px;
					border: 2px solid #0839CF;
					border-radius: 30px;
					font-size: 16px;
				}

				.input-icon {
					position: absolute;
					left: 15px;
					top: 50%;
					transform: translateY(-50%);
					font-size: 17px;
					color: #0839CF;
				}

				.btn {
					width: 100%;
					padding: 15px;
					background-color: #0839CF;
					color: #ffffff;
					border: none;
					border-radius: 30px;
					font-size: 16px;
					cursor: pointer;
					margin-top: 10px;
				}

				.btn:hover {
					background-color: #0056b3;
				}

				.login-link {
					margin-top: 20px;
					color: #666666;
				}

				.login-link a {
					color: #0839CF;
					text-decoration: none;
				}

				.login-link a:hover {
					text-decoration: underline;
				}

				@media(max-width: 480px) {
					.input-container input {
						padding-left: 40px;
					}
				}
			</style>
			<div class="container">
				<img src="{{ asset('images/pharmacy-icon.jpg') }}" alt="Logo" class="logo">
				<h2>Locapharma</h2>
				<p class="subtitle">Créer un nouveau compte</p>
				<form method="post">
					<div class="input-container">
						<span class="input-icon">
							<i class="fas fa-user"></i>
						</span>
						<input type="text" name="name" placeholder="Nom & Prénom" required>
					</div>
					<div class="input-container">
						<span class="input-icon">
							<i class="fas fa-envelope"></i>
						</span>
						<input type="email" name="email" placeholder="Votre Email" required>
					</div>
					<div class="input-container">
						<span class="input-icon">
							<i class="fas fa-lock"></i>
						</span>
						<input type="password" name="password" placeholder="Mot de passe" required>
					</div>
					<div class="input-container">
						<span class="input-icon">
							<i class="fas fa-lock"></i>
						</span>
						<input type="password" name="confirm_password" placeholder="Confirmer le mot de passe" required>
					</div>
					<button type="submit" class="btn">S'inscrire</button>
				</form>
				<p class="login-link">Vous avez un compte?
					<a href="{{ path('login') }}">Se connecter</a>
				</p>
			</div>
		</header>
	</div>

	<script src="https://kit.fontawesome.com/a076d05399.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
{% endblock %}
